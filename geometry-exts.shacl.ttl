@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix geom-ext: <https://secorolab.github.io/metamodels/geometry#> .
@prefix geom-coord: <https://comp-rob2b.github.io/metamodels/geometry/coordinates#> .
@prefix geom-rel: <https://comp-rob2b.github.io/metamodels/geometry/spatial-relations#> .

geom-ext:PoseFromPositionOrientationShape
  a sh:NodeShape ;
  sh:targetClass geom-ext:PoseFromPositionOrientation ;
  sh:property [
    sh:path geom-coord:of-pose ;
    sh:class geom-rel:Pose ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path geom-ext:from-orientation ;
    sh:class geom-rel:Orientation ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path geom-ext:from-position ;
    sh:class geom-rel:Position ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] .
